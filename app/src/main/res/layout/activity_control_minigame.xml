                android:layout_alignRight="@+id/onechoice_3image"
                android:layout_alignBottom="@+id/onechoice_3image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="if"
                android:textColor="#000000" />
        </RelativeLayout>

       </LinearLayout>

    <LinearLayout
