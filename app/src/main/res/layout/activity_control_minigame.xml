                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/onechoice_1image"
                android:layout_alignTop="@+id/onechoice_1image"
                android:layout_alignRight="@+id/onechoice_1image"
                android:layout_alignBottom="@+id/onechoice_1image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="for"
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
