                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/onechoice_2image"
                android:layout_alignTop="@+id/onechoice_2image"
                android:layout_alignRight="@+id/onechoice_2image"
                android:layout_alignBottom="@+id/onechoice_2image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="while"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/onechoice_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/onechoice_3image"
                android:clickable="true"
