<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zach.catdogwalrus.ControlMinigame">

    <fragment
        android:name="com.example.zach.catdogwalrus.Minigame_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/minigame_fragment_layout"
        android:id="@+id/minifrag"/>


    <LinearLayout
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/centertop"
        >

        <RelativeLayout
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/c1image"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/blueempty" />

            <TextView
                android:id="@+id/c1text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/c1image"
                android:layout_alignTop="@+id/c1image"
                android:layout_alignRight="@+id/c1image"
                android:layout_alignBottom="@+id/c1image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/c2image"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:src="@drawable/redempty" />

            <TextView
                android:id="@+id/c2text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/c2image"
                android:layout_alignTop="@+id/c2image"
                android:layout_alignRight="@+id/c2image"
                android:layout_alignBottom="@+id/c2image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </RelativeLayout>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/centertop"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/c3image"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/greenempty" />

        <TextView
            android:id="@+id/c3text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/c3image"
            android:layout_alignTop="@+id/c3image"
            android:layout_alignRight="@+id/c3image"
            android:layout_alignBottom="@+id/c3image"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000" />
    </RelativeLayout>

<TextView
    android:id="@+id/controlheader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:textSize="20sp"
    android:layout_centerHorizontal="true"
    android:text="Create a structure that..."
   />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/controlheader"
        android:id="@+id/controlprompt"
        android:layout_marginTop="10dp"
        android:text="Counts to 5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmbutton"
        android:layout_above="@id/centertop"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onechoices"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:id="@+id/onechoice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/onechoice_1image"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/bluefull" />

            <TextView
