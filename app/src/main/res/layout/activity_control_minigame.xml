                android:layout_alignRight="@+id/twochoice_3image"
                android:layout_alignBottom="@+id/twochoice_3image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/twochoice_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/twochoice_4image"
                android:clickable="true"
                android:layout_height="50dp"
