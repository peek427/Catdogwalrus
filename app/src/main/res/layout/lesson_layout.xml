<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customgradient"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <fragment android:name="com.example.zach.catdogwalrus.LessonTextFragment"
            android:id="@+id/lesson_text_fragment"
            android:layout_width="330dp"
            android:layout_height="match_parent"
            tools:layout="@layout/lesson_text" />

        <fragment android:name="com.example.zach.catdogwalrus.LessonCodeFragment"
            android:id="@+id/lesson_code_fragment"
            android:layout_width="250dp"
            android:layout_height="519dp"
            tools:layout="@layout/lesson_code" />

    </LinearLayout>

</RelativeLayout>